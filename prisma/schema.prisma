generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}


model TeamMember {
    id          String   @id @default(cuid())
    imageUrl    String
    logo        String?
    name        String
    designation String
    position    String? 
    linkedinUrl String?
    mail        String?
    dept_logo   String?
    bgColor     String?
    rank        Int      @default(0)
    dept_rank   Int      @default(0)

    @@index([name])
    @@map("team_members")
}

model Events {
    id                  String   @id @default(cuid())
    rank                Int      @default(0)
    title               String
    description         String
    Date                DateTime
    Time                String
    venue               String
    organizer           String
    coOrganizer         String?
    keyHighlights       String[]
    tags                String[]
    status              String
    eventGallery        String[]
    imageUrl            String?
    coverUrl            String?
    isDone              Boolean  @default(false)
    MembersParticipated Int      @default(0)
    Theme               String[]

    @@index([title])
}

model Gallery {
    id         Int      @id @default(autoincrement())
    imageUrl   String
    uploadedAt DateTime @default(now())
}